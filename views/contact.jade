extends layout

block body
	// facebook javascript sdk
	div(id="fb-root")
	script.
		(function(d, s, id) 
		{
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.0";
			fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));

	if (typeof(success) != 'undefined') 
		.row
			.col-md-12
				if success 
					div(class="alert alert-success" role="alert") 
						strong Thank you! 
						| Your message was successfully sent.
				else
					div(class="alert alert-danger" role="alert") 
						strong Oops! 
						| Your message failed to send. Try again later or contact our web team.


	.row
		form(role="form" action="/contact/submit" method="post")
			.col-lg-6
				div(class="well well-sm")
					strong
						span(class="glyphicon glyphicon-ok") 
					|   Required Field
				div(class="form-group")
					label(for="InputName") Your Name
					div(class="input-group")
						input(type="text" class="form-control" name="name" id="name" placeholder="Enter Name" required)
						span(class="input-group-addon") 
							span(class="glyphicon glyphicon-ok")
				div(class="form-group")
					label(for="InputEmail") Your Email
					div(class="input-group")
						input(type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required)
						span(class="input-group-addon") 
							span(class="glyphicon glyphicon-ok")
				div(class="form-group")
					label(for="InputMessage") Message
					div(class="input-group")
						textarea(name="message" id="message" class="form-control" rows="5" required)
						span(class="input-group-addon")
							span(class="glyphicon glyphicon-ok")
				div(class="form-group")
					label(for="InputReal") What is 4+3? (Simple Spam Checker)
					div(class="input-group")
						input(type="text" class="form-control" name="real" id="real" required)
						span(class="input-group-addon")
							span(class="glyphicon glyphicon-ok")

				input(type="submit" name="submit" id="submit" value="Submit" class="btn btn-info pull-right")
		
		hr(class="featurette-divider hidden-lg")
		
		div(class="col-lg-5 col-md-push-1")
			address
				h2 Keep in Touch
				hr
				dl(class="dl-horizontal")
					dt Phone
					dd XXX-XXX-XXXX

					dt Mailing Address
					dd 5000 Forbes Ave, Pittsburgh, PA 15289

					dt Email 
					dd 
						a(href="mailto:cmsr.executive@@gmail.com") cmsr.executive@gmail.com
 
				hr
				p(class="lead")
					h2 Social Media
					hr
					div(style='position:relative; right:0px;' class="fb-like" data-href="https://www.facebook.com/carnegiemellonsolarracing" 
					data-width="300" data-layout="standard" data-action="like" data-show-faces="true" 
					data-share="true")
					br
					br
					br
					| <a href="https://twitter.com/CMUSolarRacing" class="twitter-follow-button" data-show-count="false" data-size="large">Follow @CMUSolarRacing</a>
